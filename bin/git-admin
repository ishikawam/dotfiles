#!/bin/bash
# git configにローカルで作成したブランチ情報を追加・削除

if [ -z $1 ]; then
    echo "git-admin addbr "
    echo "git-admin delbr "
    echo "..."
    exit 1
fi
if [ -z $2 ]; then
    echo "git-admin addbr xxx"
    echo "git-admin delbr xxx"
    echo "..."
    exit 1
fi


if test $1 = 'addbr' ; then
    # 追加
    git config branch.$2.merge refs/heads/$2
    git config branch.$2.remote origin
    echo "add branch to config."
    exit 1
elif test $1 = 'delbr' ; then
    # 削除
    git config --remove-section branch.$2
    echo "del branch to config."
    exit 1
fi

