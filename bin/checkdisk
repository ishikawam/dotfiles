#!/usr/bin/php
<?php
/**
 * ホームディレクトリの容量チェック
 */

echo "\n### du -sm ./* ###\n";
$output = array();
$directories = array();
exec('sudo du -sm ./* | sort -nr | head -20', $output);  // top 20
foreach($output as $val) {
    $val = explode("\t", $val);
    if ($val[0] < 100) {  // 100MB以上
        continue;
    }
    $directories[] = $val;
    if (is_dir($val[1])) {
        $val[1] .= '/';
    }
    echo "{$val[0]}	{$val[1]}\n";
}


for ($i=1; $i<=3; $i++) {
    $directories = array_slice($directories, 0, 20);  // top 20
    echo "\n### du -sm ." . str_repeat('/*', $i) . " ###\n";
    $output = array();
    $home = array();
    foreach($directories as $val) {
        if (is_dir($val[1])) {
            $home []= "'" . $val[1] . "'";
        }
    }
    $home = implode(',', $home);

    $cmd = 'sudo find {' . $home . '} -maxdepth 1 -mindepth 1 -exec du -sm {} \; | sort -nr | head -50';  // top 50
    echo("\n" . $cmd . "\n");
    $directories = array();
    exec($cmd, $output);
    foreach($output as $val) {
        $val = explode("\t", $val);
        if ($val[0] < 100) {  // 100MB以上
            continue;
        }
        $directories[] = $val;
        if (is_dir($val[1])) {
            $val[1] .= '/';
        }
        echo "{$val[0]}	{$val[1]}\n";
    }
}
