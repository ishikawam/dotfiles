{
    "title": "Mapping [option alone to esc by Ishikawa",
    "rules": [
        {
            "description": "Mapping [option alone to esc by Ishikawa",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 200,
                        "basic.to_if_held_down_threshold_milliseconds": 200
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 200,
                        "basic.to_if_held_down_threshold_milliseconds": 200
                    }
                }
            ]
        }
    ]
}
